<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DemographicActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:background="#e6e6e6"
                    android:layout_margin="8dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:text="শ্বাসতন্ত্রজনিত রোগের উপসর্গ (গত ১৪ দিনের মধ্যে)"
                            android:layout_span="2"
                            android:textColor="#0033cc" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <CheckBox
                            android:id="@+id/respiratory"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="শ্বাসতন্ত্রজনিত অসুস্থতার লক্ষন/উপসর্গ রয়েছে কি?"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/respiratory_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="YYYY-MM-DD"
                            android:visibility="gone"/>
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/res_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="8dp">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:background="#e6e6e6"
                    android:layout_margin="8dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <CheckBox
                            android:id="@+id/fever"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="জ্বর"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/fever_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="YYYY-MM-DD"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <CheckBox
                            android:id="@+id/cough"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="কাশি"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/cough_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="YYYY-MM-DD"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <CheckBox
                            android:id="@+id/asthma"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="শ্বাস কষ্ট"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/asthma_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="YYYY-MM-DD"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <CheckBox
                            android:id="@+id/tired"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="ক্লান্তি"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/tired_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="YYYY-MM-DD"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <CheckBox
                            android:id="@+id/body_pain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="শরীর ব্যথা"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/body_pain_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="YYYY-MM-DD"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <CheckBox
                            android:id="@+id/headache"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="মাথা ব্যথা"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/headache_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="YYYY-MM-DD"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <CheckBox
                            android:id="@+id/test"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="মুখে স্বাদ না পাওয়া"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/test_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="YYYY-MM-DD"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <CheckBox
                            android:id="@+id/smell"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="নাকের ঘ্রান না পাওয়া"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/smell_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="YYYY-MM-DD"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <CheckBox
                            android:id="@+id/throat_pain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="গলা ব্যথা"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/throat_pain_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="YYYY-MM-DD"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <CheckBox
                            android:id="@+id/cold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="নাকে সর্দি"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/cold_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="YYYY-MM-DD"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <CheckBox
                            android:id="@+id/diarrhoea"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="ডায়রিয়া (দিনে ৩ বা ততোধিক পাতলা পায়খানা)"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/diarrhoea_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="YYYY-MM-DD"/>
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="8dp">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:background="#e6e6e6"
                    android:layout_margin="8dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">
                        <Button
                            android:id="@+id/submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="submit"
                            android:layout_span="2"
                            style="@style/Widget.AppCompat.Button.Colored"
                            />
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>