<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DemographicActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:background="#e6e6e6"
                    android:layout_margin="8dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:text="2. পরিবার ও গৃহস্থালি সম্পর্কিত তথ্যাদি"
                            android:layout_span="2"
                            android:textColor="#0033cc"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.1 বাড়ীর নং"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            />
                       <EditText
                           android:id="@+id/h_no"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.2 পরিবারের প্রধানের নাম"
                            android:layout_gravity="center_vertical"
                            />
                        <EditText
                            android:id="@+id/h_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.3 পরিবারের প্রধানের মোবাইল নং"
                            android:layout_gravity="center_vertical"
                            />
                        <EditText
                            android:id="@+id/h_mob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:maxLength="11"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.4 তথ্য প্রদানে পরিবার প্রধানের \nঅনুমতি আছে কি"
                            android:layout_gravity="center_vertical"
                            />
                        <RadioGroup
                            android:id="@+id/consent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RadioButton
                                android:id="@+id/consent_yes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="yes"/>
                            <RadioButton
                                android:id="@+id/consent_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No"/>
                        </RadioGroup>
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/pos_con"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:background="#e6e6e6"
                    android:layout_marginTop="8dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.6 পরিবারের মোট সদস্য সংখ্যা"
                            android:layout_gravity="center_vertical"
                            />
                        <EditText
                            android:id="@+id/fam_qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:maxLength="2"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.7 বাড়ীতে কক্ষের সংখ্যা"
                            android:layout_gravity="center_vertical"
                            />
                        <EditText
                            android:id="@+id/room_qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:maxLength="2" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.8 বাড়ীতে বাথরুমের সংখ্যা"
                            android:layout_gravity="center_vertical"
                            />
                        <EditText
                            android:id="@+id/toilet_qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:maxLength="1" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.9 বাড়ীতে পৃথক রান্নাঘর আছে কি"
                            android:layout_gravity="center_vertical"
                            />
                        <RadioGroup
                            android:id="@+id/kitchen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RadioButton
                                android:id="@+id/kitchen_yes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="yes"/>
                            <RadioButton
                                android:id="@+id/kitchen_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No"/>
                        </RadioGroup>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.10 বাড়ীতে হাত ধোয়ার জন্য \nআলাদা জায়গা আছে কি
\n (হাত ধোয়ার বেসিন)"
                            android:layout_gravity="center_vertical"
                            />
                        <RadioGroup
                            android:id="@+id/basin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RadioButton
                                android:id="@+id/basin_yes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="yes"/>
                            <RadioButton
                                android:id="@+id/basin_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No"/>
                        </RadioGroup>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.11 সাধারনত খাবার পানির \nসংগ্রহের স্থান"
                            android:layout_gravity="center_vertical"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RadioGroup
                                android:id="@+id/drink_src_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/supply"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Supply water"/>
                                <RadioButton
                                    android:id="@+id/tube"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tube well water"/>
                                <RadioButton
                                    android:id="@+id/drink_src_type_oth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Other"/>
                            </RadioGroup>
                            <EditText
                                android:id="@+id/drink_src"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2.11.a খাবার পানি পরিশোধন এর প্রক্রিয়া"
                            android:layout_gravity="center_vertical"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <CheckBox
                                android:id="@+id/boil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Boiled"/>
                            <CheckBox
                                android:id="@+id/filter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Filtered"/>
                            <CheckBox
                                android:id="@+id/water_puri_type_oth"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Other"/>
                            <EditText
                                android:id="@+id/water_puri_type_oth_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="অন্যান্য উল্লেখ করুন"/>
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.12 পরিবারে উপস্থিত সদস্যের সংখ্যা \n
(তথ্য সংগ্রহের সময়)"
                            android:layout_gravity="center_vertical"
                            />
                        <EditText
                            android:id="@+id/present_mem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLength="2"
                            android:inputType="number"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="সর্বমোট মাসিক ব্যয়"
                            android:layout_gravity="center_vertical"
                            />
                        <EditText
                            android:id="@+id/expense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLength="6"
                            android:inputType="numberDecimal"/>
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:background="#e6e6e6"
                    android:layout_margin="8dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">
                        <Button
                            android:id="@+id/submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="submit"
                            android:layout_span="2"
                            style="@style/Widget.AppCompat.Button.Colored"
                            />
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>