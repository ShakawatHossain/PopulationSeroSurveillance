<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:stretchColumns="*"
    android:layout_margin="16dp"
    android:padding="16dp"
    app:layout_constraintCircleRadius="4dp">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginBottom="2dp"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:text="Sero ID Initialization"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#0033cc" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginBottom="2dp"
        android:padding="2dp">
        <TextView
            android:id="@+id/sp_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select Slum"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
             />
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/slum_list"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginBottom="2dp"
        android:padding="2dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="User No"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/user_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="02"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginBottom="2dp"
        android:padding="2dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="House ID"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/h_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="3 digit only"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="3"
            android:layout_gravity="center_vertical"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginBottom="2dp"
        android:padding="2dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sero ID"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/sero_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Final ID"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginBottom="2dp">
        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:layout_span="2"
            style="@style/Widget.AppCompat.Button.Colored" />
    </TableRow>

</TableLayout>